# ===== AI API Keys =====
# FactChat API (서강대학교 통합 AI API 서비스)
FACTCHAT_API_KEY=your_factchat_api_key_here

# 아래 개별 API는 사용하지 않음 (FactChat로 통합 사용)
# OPENAI_API_KEY=not_used
# ANTHROPIC_API_KEY=not_used  
# GOOGLE_AI_API_KEY=not_used

# ===== 데이터베이스 =====
DATABASE_URL=sqlite:///data/database/videos.db
DATABASE_MAX_CONNECTIONS=10

# ===== Redis 캐시 =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== 세션 관리 =====
MAX_CONCURRENT_USERS=5
MAX_CONCURRENT_TASKS=3
SESSION_TIMEOUT_MINUTES=30

# ===== 시스템 리소스 제한 =====
MAX_CPU_PERCENT=80
MAX_MEMORY_PERCENT=85
MAX_DISK_USAGE_PERCENT=90

# ===== 캐시 설정 =====
MEMORY_CACHE_SIZE_MB=50

# ===== 로깅 =====
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===== Notion 연동 (선택사항) =====
NOTION_API_KEY=
NOTION_DATABASE_ID=

# ===== 보안 =====
ALLOWED_HOSTS=localhost,127.0.0.1
DEBUG=false

# ===== 기타 설정 =====
AI_PROVIDER=factchat  # 통합 API 서비스 사용
SCENE_PRECISION_LEVEL=5

# ===== 경로 설정 (선택사항) =====
# 기본값이 있으므로 설정하지 않아도 됩니다.
# Docker 환경에서 볼륨 마운트와 함께 사용하면 유용합니다.
# DATA_DIR=data
# TEMP_DIR=data/temp
# CACHE_DIR=data/cache
# RESULTS_DIR=results
# REPORTS_DIR=results/reports
# DATABASE_DIR=results/database
# WORKSPACES_DIR=data/workspaces
